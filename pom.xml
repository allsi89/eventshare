    <groupId>com.allsi</groupId>
    <artifactId>eventshare</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <name>eventshare</name>
    <description>Final Project for Spring MVC @ SoftUni</description>

    <properties>
        <java.version>11</java.version>
        <INSTANCE_CONNECTION_NAME>event-share:europe-west6:event-share-db</INSTANCE_CONNECTION_NAME>
